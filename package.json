{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s -l build:*",
    "build:codegen": "pnpm codegen",
    "build:remix": "remix build",
    "check": "prettier --check .",
    "codegen": "gql-gen --config codegen.yml -r dotenv/config",
    "deploy": "fly deploy --remote-only",
    "dev": "run-p -l dev:*",
    "dev:codegen": "watchlist app/graphql/*.graphql -- pnpm codegen",
    "dev:remix": "remix dev",
    "format": "prettier --write .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build",
    "test": "echo $0",
    "typecheck": "tsc -b"
  },
